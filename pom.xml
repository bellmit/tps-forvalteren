<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.3.5.RELEASE</version>
    </parent>

    <groupId>no.nav.tps.vedlikehold</groupId>
    <artifactId>tps-vedlikehold</artifactId>
    <name>TPS Vedlikeholdsklient</name>
    <version>1.0.0-SNAPSHOT</version>

    <packaging>pom</packaging>

    <modules>
        <module>tps-vedlikehold-application</module>
        <module>tps-vedlikehold-common</module>
        <module>tps-vedlikehold-config</module>
        <module>tps-vedlikehold-consumer</module>
        <module>tps-vedlikehold-domain</module>
        <module>tps-vedlikehold-provider</module>
        <module>tps-vedlikehold-service</module>
    </modules>

    <prerequisites>
        <maven>3.3.1</maven>
    </prerequisites>

    <properties>
        <!--Application properties-->
        <application.descriptiveName>TPS-VEDLIKEHOLD</application.descriptiveName>
        <application.name>tps-vedlikehold</application.name>
        <application.version>${project.version}</application.version>
        <application-ear.version>7</application-ear.version>
        <lombok.version>1.16.10</lombok.version>

        <!--SonarQube-->
        <jacoco.version>0.7.7.201606060606</jacoco.version>
        <sonar.exclusions>**/*Config.java,**/ConsumerConfigUtil.java,**/application/local/**,**/tps-vedlikehold/domain/test/**</sonar.exclusions>
        <sonar.coverage.exclusions>**/vedlikehold/domain/**,**Constants.java,**ServletInitializer.java</sonar.coverage.exclusions>

        <!--NAV dependency versions-->
        <modig-log-jaxws.version>1.1.3</modig-log-jaxws.version>
        <modig-security-ws.version>2.0.0-alpha.2</modig-security-ws.version>
        <modig-testcertificates.version>1.2.0</modig-testcertificates.version>
        <diskresjonskode-v1.version>1.1.0</diskresjonskode-v1.version>
        <pipEgenAnsatt-v1.version>1.0.0</pipEgenAnsatt-v1.version>
        <freg.starter.version>1.0.0</freg.starter.version>

        <!--Dependency versions-->
        <bootstrap.version>3.3.5</bootstrap.version>
        <cxf-rt-frontend-jaxws.version>2.7.5</cxf-rt-frontend-jaxws.version>
        <dhbcore.version>DH610-GOLD</dhbcore.version>
        <jackson-xml-databind.version>0.6.2</jackson-xml-databind.version>
        <java.version>1.8</java.version>
        <javaee-api.version>7.0</javaee-api.version>
        <javax-jms.version>2.0</javax-jms.version>
        <jmqi.version>7.1.0.0</jmqi.version>
        <jms.version>1.1</jms.version>
        <guava.version>19.0</guava.version>
        <org.apache.commons.io.version>2.4</org.apache.commons.io.version>
        <orika.version>1.4.5</orika.version>
        <mqjms.version>7.1</mqjms.version>
        <springfox-swagger2.version>2.4.0</springfox-swagger2.version>
        <springfox-swagger-ui.version>2.4.0</springfox-swagger-ui.version>
        <spring-security-ldap.version>4.0.4.RELEASE</spring-security-ldap.version>

        <!--Plugin versions-->
        <aura-maven-plugin.version>6.1.20</aura-maven-plugin.version>
        <maven-ear-plugin.version>2.10.1</maven-ear-plugin.version>
        <maven-remote-resources-plugin.version>1.5</maven-remote-resources-plugin.version>
        <frontend-maven-plugin.version>1.2</frontend-maven-plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!--INTERNAL-->
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-application-local</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-config</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-service-java</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-common-test</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-common-java</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-consumer-mq</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-consumer-ws</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-consumer-rs</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-domain-service</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-domain-ws</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-domain-rs</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-provider-rs</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-provider-web</artifactId>
                <version>${project.version}</version>
                <classifier>classes</classifier>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-service</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.freg</groupId>
                <artifactId>freg-spring-boot-starters-dependencies</artifactId>
                <version>${freg.starter.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!--SPRING-->
            <dependency>
                <groupId>org.springframework.security</groupId>
                <artifactId>spring-security-ldap</artifactId>
                <version>${spring-security-ldap.version}</version>
            </dependency>

            <!--SERVICES-->
            <dependency>
                <groupId>no.nav.tjenester.pip</groupId>
                <artifactId>nav-pip-diskresjonskode-v1-tjenestespesifikasjon</artifactId>
                <version>${diskresjonskode-v1.version}</version>
                <classifier>jaxws</classifier>
            </dependency>
            <dependency>
                <groupId>no.nav.tjenester.pip</groupId>
                <artifactId>nav-pip-pipEgenAnsatt-v1-tjenestespesifikasjon</artifactId>
                <version>${pipEgenAnsatt-v1.version}</version>
                <classifier>jaxws</classifier>
            </dependency>

            <!--LANGUAGE EXTENSIONS-->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>

            <!-- MODIG -->
            <dependency>
                <groupId>no.nav.modig</groupId>
                <artifactId>modig-security-ws</artifactId>
                <version>${modig-security-ws.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.modig</groupId>
                <artifactId>modig-log-jaxws</artifactId>
                <version>${modig-log-jaxws.version}</version>
              </dependency>
            <dependency>
                <groupId>no.nav.modig</groupId>
                <artifactId>modig-testcertificates</artifactId>
                <version>${modig-testcertificates.version}</version>
            </dependency>

            <!-- WEBJARS -->
            <dependency>
                <groupId>org.webjars</groupId>
                <artifactId>bootstrap</artifactId>
                <version>${bootstrap.version}</version>
            </dependency>

            <!-- CXF library -->
            <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${cxf-rt-frontend-jaxws.version}</version>
            </dependency>

            <!-- Apache Commons IO -->
            <dependency>
                <groupId>org.apache.directory.studio</groupId>
                <artifactId>org.apache.commons.io</artifactId>
                <version>${org.apache.commons.io.version}</version>
            </dependency>

            <!-- JSON / XML -->
            <dependency>
                <groupId>com.fasterxml</groupId>
                <artifactId>jackson-xml-databind</artifactId>
                <version>${jackson-xml-databind.version}</version>
            </dependency>

            <!-- DOCUMENTATION -->
            <dependency>
                <groupId>io.springfox</groupId>
                <artifactId>springfox-swagger2</artifactId>
                <version>${springfox-swagger2.version}</version>
            </dependency>
            <dependency>
                <groupId>io.springfox</groupId>
                <artifactId>springfox-swagger-ui</artifactId>
                <version>${springfox-swagger-ui.version}</version>
            </dependency>
            <dependency>
                <groupId>ma.glasnost.orika</groupId>
                <artifactId>orika-core</artifactId>
                <version>${orika.version}</version>
            </dependency>

            <!-- DEPLOYMENT -->
            <dependency>
                <groupId>javax</groupId>
                <artifactId>javaee-api</artifactId>
                <version>${javaee-api.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-provider-web</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>

            <!--JMS AND MQ-->
            <dependency>
                <groupId>com.ibm.mq</groupId>
                <artifactId>jmqi</artifactId>
                <version>${jmqi.version}</version>
            </dependency>
            <dependency>
                <groupId>com.ibm.disthub2</groupId>
                <artifactId>dhbcore</artifactId>
                <version>${dhbcore.version}</version>
            </dependency>
            <dependency>
                <groupId>javax.jms</groupId>
                <artifactId>jms</artifactId>
                <version>${jms.version}</version>
            </dependency>
            <dependency>
                <groupId>com.ibm</groupId>
                <artifactId>mqjms</artifactId>
                <version>${mqjms.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>


    <build>
        <pluginManagement>
            <plugins>
                <!--JBoss-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-ear-plugin</artifactId>
                    <version>${maven-ear-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-remote-resources-plugin</artifactId>
                    <version>${maven-remote-resources-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>no.nav.maven.plugins</groupId>
                    <artifactId>aura-maven-plugin</artifactId>
                    <version>${aura-maven-plugin.version}</version>
                    <configuration>
                        <apps>${application.name}:${project.version}</apps>
                    </configuration>
                </plugin>

                <!--Sonar-->
                <plugin>
                    <groupId>org.jacoco</groupId>
                    <artifactId>jacoco-maven-plugin</artifactId>
                    <version>${jacoco.version}</version>
                    <executions>
                        <!-- Generate an aggregated code coverage report for all sub-modules and store it in the target folder as jacoco.exec. -->
                        <execution>
                            <id>generate-coverage-reports</id>
                            <goals>
                                <goal>prepare-agent</goal>
                            </goals>
                            <configuration>
                                <append>true</append>
                                <includes>
                                    <include>no.nav.*</include>
                                </includes>
                                <destFile>${session.executionRootDirectory}/target/jacoco.exec</destFile>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

                <plugin>
                    <groupId>com.github.eirslett</groupId>
                    <artifactId>frontend-maven-plugin</artifactId>
                    <version>${frontend-maven-plugin.version}</version>
                </plugin>


            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

</project>
