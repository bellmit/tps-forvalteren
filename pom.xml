<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.3.5.RELEASE</version>
    </parent>

    <groupId>no.nav.tps.vedlikehold</groupId>
    <artifactId>tps-vedlikehold</artifactId>
    <name>TPS Vedlikeholdsklient</name>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>tps-vedlikehold-consumer</module>
        <module>tps-vedlikehold-common</module>
        <module>tps-vedlikehold-provider</module>
        <module>tps-vedlikehold-config</module>
        <module>tps-vedlikehold-service</module>
        <module>tps-vedlikehold-application</module>
        <module>tps-vedlikehold-domain</module>
    </modules>

    <properties>
        <application.name>tps-vedlikehold</application.name>
        <java.version>1.8</java.version>
        <application-ear.version>7</application-ear.version>
        <javaee-api.version>7</javaee-api.version>
        <maven-ear-plugin.version>2.10.1</maven-ear-plugin.version>
        <maven-remote-resources-plugin.version>1.5</maven-remote-resources-plugin.version>
        <aura-maven-plugin.version>5.0.7</aura-maven-plugin.version>
        <jacoco-maven-plugin.version>0.7.4.201502262128</jacoco-maven-plugin.version>
        <sonar.exclusions>**/*Config.java,**/ConsumerConfigUtil.java,**/application/local/**,**/tps-vedlikehold/domain/test/**</sonar.exclusions>
        <common-brevogarkiv.version>1.5.7</common-brevogarkiv.version>
        <java.version>1.8</java.version>
    </properties>


    <prerequisites>
        <maven>3.3.1</maven>
    </prerequisites>


    <dependencyManagement>
        <dependencies>
            <!--INTERNAL-->
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-application-local</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-application-local</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-config</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-common-test</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-common-develop</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-consumer-mq</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-consumer-ws</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-domain-rs</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-provider-rs</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-provider-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-service</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!--LANGUAGE EXTENSIONS-->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>19.0</version>
            </dependency>

            <!-- DOCUMENTATION -->
            <dependency>
                <groupId>io.springfox</groupId>
                <artifactId>springfox-swagger2</artifactId>
                <version>2.4.0</version>
            </dependency>
            <dependency>
                <groupId>io.springfox</groupId>
                <artifactId>springfox-swagger-ui</artifactId>
                <version>2.4.0</version>
            </dependency>

            <!--SERVICES-->
            <dependency>
                <groupId>no.nav.brevogarkiv</groupId>
                <artifactId>common-util-fasit</artifactId>
                <version>${common-brevogarkiv.version}</version>
            </dependency>
            
            <!-- DEPLOYMENT -->
            <dependency>
                <groupId>javax</groupId>
                <artifactId>javaee-api</artifactId>
                <version>${javaee-api.version}</version>
            </dependency>
            <dependency>
                <groupId>no.nav.tps.vedlikehold</groupId>
                <artifactId>tps-vedlikehold-provider-web</artifactId>
                <version>${project.version}</version>
                <type>war</type>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <!--JBoss-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-ear-plugin</artifactId>
                    <version>${maven-ear-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-remote-resources-plugin</artifactId>
                    <version>${maven-remote-resources-plugin.version}</version>
                </plugin>
                <plugin>
                    <groupId>no.nav.maven.plugins</groupId>
                    <artifactId>aura-maven-plugin</artifactId>
                    <version>${aura-maven-plugin.version}</version>
                    <configuration>
                        <apps>${application.name}:${project.version}</apps>
                    </configuration>
                </plugin>

                <!--Sonar-->
                <plugin>
                    <groupId>org.jacoco</groupId>
                    <artifactId>jacoco-maven-plugin</artifactId>
                    <version>${jacoco-maven-plugin.version}</version>
                    <executions>
                        <!-- Generate an aggregated code coverage report for all sub-modules and store it in the target folder as jacoco.exec. -->
                        <execution>
                            <id>generate-coverage-reports</id>
                            <goals>
                                <goal>prepare-agent</goal>
                            </goals>
                            <configuration>
                                <append>true</append>
                                <includes>
                                    <include>no.nav.*</include>
                                </includes>
                                <destFile>${session.executionRootDirectory}/target/jacoco.exec</destFile>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
